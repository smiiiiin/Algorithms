
// 1717 집합의 표현
#include <iostream>
#include <vector>
#define MAX 1000001
#define INF 987654321
using namespace std;
int parent[MAX];
vector<pair<int,int>> adj[MAX];
int find(int x){
    if(x==parent[x]) return x;
    return parent[x]=find(parent[x]);}

void join(int a,int b){
    a= find(a); b= find(b);
    if(a==b) return;
    else parent[a]=b;}

int main(){
    cin.tie(0); cout.tie(0); ios_base::sync_with_stdio(false);
    int n,m; cin>>n>>m;
    for(int i=1;i<=n;i++) parent[i]=i; //초기화
    
    for(int i=1;i<=m;i++){
        int a,b,c; cin>>a>>b>>c;
        if(a==0) join(b,c);
        else{
            if(find(b)== find(c)) cout<<"YES\n";
            else cout<<"NO\n";}}
    return 0;}






